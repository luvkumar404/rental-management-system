<%- layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3 display-4">Login to Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          placeholder="Enter Username"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          placeholder="Enter password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-dark offset-5">Login</button>
    </form>
  </div>
</div>