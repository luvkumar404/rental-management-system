<% layout("/layouts/boilerplate.ejs") %>
<script>
 const mapToken="<%=process.env.GEOAPIFY_KEY%>"
 const title="<%=listItem.title%>"
 const listingLocation="<%=listItem.location%>"
</script>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>
        <%= listItem.title %>
      </h3>
    </div>

    <div class="card col-6 offset-3 mt-3 listing-card">
      <img src="<%= listItem.image.url %>" class="card-img-top show_img" alt="Listing image">
      <div class="card-body">
        <p class="card-text">
        <p>Owned by <i><%= listItem.owner.username %></i></p>
        <p><%= listItem.description %> </p>
        <p>&#8377 <%= listItem.price.toLocaleString("en-IN") %> </p>
        <p> <%= listItem.location %> </p>
        <p> <%= listItem.country %></p>
        </p>

      </div>
    </div>

    <% if ( currUser &&  currUser._id.equals(listItem.owner._id)) { %>
    <div class="btns  offset-3">
      <form action="/listings/<%= listItem._id %>/edit " method="get">
        <button class="btn btn-dark  ">Edit</button>
      </form>

      <form action="/listings/<%= listItem._id %>?_method=DELETE" method="post">
        <button class="btn btn-danger ">Delete</button>
      </form>
    </div>
    <% } %>
    <hr>
    <div class="col-8 offset-3 mt-3">


      <% if (currUser) { %>

      <h4>Leave a review</h4>
      <form action="/listings/<%= listItem._id %>/reviews" method="post" novalidate class="needs-validation" onsubmit="event.preventDefault(); storeScrollPos(); this.submit();">


        <!-- <div class="mt-3 mb-3">
          <input type="range" name="" min="1" max="5" class="form-range">
        </div> -->

        <div class="mt-3 mb-3">

          <label for="rating" class="form-tool">Rating</label>
          <fieldset class="starability-coinFlip">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mt-3 mb-3">
          <label for="comment" class="form-tool">Comment</label>
          <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
          <div class="invalid-feedback">Please submit some comment for review</div>
        </div>
        <button class="btn btn-outline-dark mt-3 mb-3">Submit</button>



      </form>
      <hr>
      <% } %>




      <% if (listItem.reviews.length) { %>

      <p><b>Reviews</b></p>
      <div class="row">

        <% for(item of listItem.reviews) { %>
        <div class="card col-5 mb-3 ms-3 mt-3">
          <div class="card-body">
            <h5 class="card-title">@<%=item.author.username%></h5>
            <p class="starability-result card-text" data-rating="<%=item.rating%>">

            </p>
            <h6 class="card-subtitle mb-2 text-body-secondary">
              <%=item.comment %>
            </h6>



            <form action="/listings/<%= listItem._id %>/reviews/<%=item._id %>?_method=DELETE" method="post" onsubmit="storeScrollPos()">
              <% if (currUser && item.author._id.equals(currUser._id)) { %>

              <button class="btn btn-dark">Delete</button>
              <% } %>
            </form>

          </div>
        </div>

        <%}%>
        </div>
        <% } %>

        <br>


      </div>
    </div>
    <div class="col-8 offset-3">
      <h3>Where you'll be</h3>
      <div id="map" style="height: 400px; width: 650px; border-radius: 10px;" class="mt-4 mb-4"></div>

    </div>



  </div>

</body>
<script src="/js/map.js"></script>