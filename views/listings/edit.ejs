<%- layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Edit your listing</h2>
      <form
        action="/listings/<%=list._id%>?_method=PUT"
        novalidate
        class="needs-validation"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>

          <input
            type="text"
            placeholder="Enter the Title"
            name="listings[title]"
            value="<%=list.title%>"
            class="form-control"
            required
          />

          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Please enter title</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listings[description]"
            placeholder="Enter the description"
            class="form-control"
            required
          >
<%=list.description%></textarea
          >
          <div class="valid-feedback">Description looks good!</div>
          <div class="invalid-feedback">Please enter short description</div>
        </div>
        
        <div class="mb-3">
          <h5>listing image</h5>
          <img src="<%= originalImageUrl %>" alt="">
        </div>
        <div class="mb-3">

          <label for="image" class="form-label">Image</label>
          <input
            type="file"
            name="listings[image]"
            placeholder="Place your image link here"
            value="<%=list.image%>"
            class="form-control"
          />
          <div class="valid-feedback">Url looks good!</div>
          <div class="invalid-feedback">Please enter valid image url</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="listings[price]"
              placeholder="Enter price"
              value="<%=list.price%>"
              class="form-control"
              required
            />
            <div class="valid-feedback">Price looks good!</div>
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="listings[country]" class="form-label">Country</label>
            <input
              type="text"
              placeholder="Enter Country"
              name="listings[country]"
              value="<%=list.country%>"
              class="form-control"
              required
            />
            <div class="valid-feedback">Country looks good!</div>
            <div class="invalid-feedback">Please enter country</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>

          <input
            type="text"
            placeholder="Enter location"
            name="listings[location]"
            value="<%=list.location%>"
            class="form-control"
            required
          />
          <div class="valid-feedback">location looks good!</div>
          <div class="invalid-feedback">Please enter valid location</div>
        </div>

        <button class="btn btn-dark submit_btn mt-3 mb-3">Submit</button>
      </form>
    </div>
  </div>
</body>